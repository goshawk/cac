<metal:html use-macro="base.macros['main']">
     <metal:content fill-slot="content">
		<!-- Begin two column content -->
				<div class="two_column">
				
					<div class="main">
						
						<h4></h4>
						<br/>
						<br/>
						<form id="contact_form" method="post" action="mailer.php">
							<p style="margin-top:20px">
								<label for="your_name">Nome</label><br/>
								<input id="your_name" name="your_name" type="text" style="width:90%"/>
							</p>
							<p style="margin-top:20px">
								<label for="email">Email</label><br/>
								<input id="email" name="email" type="text" style="width:90%"/>
							</p>
							<p style="margin-top:20px">
								<label for="numero">Numero di telefono</label><br/>
								<input id="numero" name="numero" type="text" style="width:90%"/>
							</p>
							<p style="margin-top:20px">
								<label for="message">Messaggio</label><br/>
								<textarea id="message" name="message" style="width:90%" rows="3" cols="5"></textarea>
							</p>
							<br/><br/>
							<p style="margin-top:20px">
								<input type="submit" value="Send Message"/>
							</p>
						</form>
						<div id="reponse_msg"></div>
						
					</div>
					
										<div class="side_bar">
						<div class="content" style="margin-top:40px">
							<h4>
								In evidenza
							</h4>
							
							<ul class="posts">
								<li>
									<img src="${request.static_url('cac:static/cac_imgs/test_udito.jpg')}" width="85px" alt=""/>
									<a href="${request.application_url}/test_udito">
										Prenota una visita gratuita del tuo udito
									</a><br/>
									Rispondendo a delle semplici domande potrai capire
									se hai problemi d'udito o meno...
								</li>
								<li>
									<img src="${request.static_url('cac:static/cac_imgs/test_udito_sede.jpg')}" width="85px" alt=""/>
									<a href="${request.application_url}/contact_us">
										Test udito in sede gratuito
									</a><br/>
									Prenota una visita
									gratuita del test dell'udito completamente indolore e 
									non invasiva.
								</li>
								<li>
									<img src="${request.static_url('cac:static/cac_imgs/acufeni.jpg')}" width="85px" alt=""/>
									<a href="${request.application_url}/acufeni">
										Acufeni
									</a><br/>
									Avverti un continuo ronzio all'orecchio? Potresti avere un Acufene! Informati su che cosa sono gli acufeni e scopri come sconfiggerli con 
il programma ZEN.
								</li>
							</ul>
						</div>
					</div>

					
				</div>
				<!-- End two column content -->
     </metal:content>
     <metal:slider fill-slot="slider">
		 <div class="caption"> 
			<h1>Contattaci</h1> 
		</div> 
     </metal:slider>
</metal:html>
